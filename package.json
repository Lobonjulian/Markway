{
  "name": "markway",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend de Markway - plataforma de contenido curado (React + Vite + pnpm + CSS Modules)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.5",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.7",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "pnpm lint --fix",
      "pnpm format"
    ],
    "*.{css,md,json}": [
      "pnpm format"
    ]
  }
}
